{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Sessão Compra: serviço web",
            "request": "launch",
            "mainClass": "com.derso.arquitetura.sessaocompra.SessaoCompraApplication",
            "projectName": "sessaocompra-web"
        },
        {
            "type": "java",
            "name": "Sessão Compra: serviço timeouts",
            "request": "launch",
            "mainClass": "com.derso.arquitetura.timeout.TimeoutApplication",
            "projectName": "sessaocompra-timeout"
        },
        {
            "type": "java",
            "name": "Clientes",
            "request": "launch",
            "mainClass": "com.derso.arquitetura.clientes.ClientesApplication",
            "projectName": "clientes"
        },
        {
            "type": "java",
            "name": "Serviço externo: Hotel",
            "request": "launch",
            "mainClass": "com.derso.arquitetura.reservasexterno.ReservasExternoApplication",
            "projectName": "reservas-externo",
            "env": {
                "SPRING_PROFILES_ACTIVE": "hotel"
            }
        },
        {
            "type": "java",
            "name": "Serviço externo: Voo",
            "request": "launch",
            "mainClass": "com.derso.arquitetura.reservasexterno.ReservasExternoApplication",
            "projectName": "reservas-externo",
            "env": {
                "SPRING_PROFILES_ACTIVE": "voo"
            }
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}